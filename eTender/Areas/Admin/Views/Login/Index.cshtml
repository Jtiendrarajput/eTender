@{
    ViewBag.Title = "Index";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>e-Procurement System</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <link rel='stylesheet prefetch' href='http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css'>
    <link href="~/Resources/css/style.css" rel="stylesheet" />
    <script src="~/Scripts/angular-min-1.4.8.js"></script>
    <script src="~/Areas/Admin/AngularModel/Login.js"></script>
    <style>
        select, .myform input {
            width: 190px;
        }

        td {
            padding: 5px;
        }

        .textcolortrue {
            color: red;
        }

        .textcolorfalse {
            color: white;
        }
    </style>
</head>

<body ng-controller="LoginController" ng-app="LoginModule">

    <!Form Mixin>
    <!Input Mixin>
    <!Button Mixin>
    <!Pen Title>
    <div class="pen-title">
        <img src="~/Resources/img/npp-logo.png" width="330" />
    </div>
    <!Form Module>
    <div class="module form-module">
        <div >
          
        </div>

        <div class="form">
            <h2>Login to your account</h2>
            <form ng-submit="Login()">
                <input type="text" placeholder="Username *" ng-model="LoginDetails.UserName" required />
                <input type="password" placeholder="Password *" ng-model="LoginDetails.PassWord" required />
                @*<button>Login</button>*@
                <input type="submit" value="Login" />
            </form>
        </div>


        <div class="cta">e-Procurement System. Developed by <a href="#">India Interactive</a></div>
    </div>
    @*<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src="~/Resources/js/index.js"></script>*@
</body>
</html>