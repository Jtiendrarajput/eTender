@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Committee/Views/Shared/_layout.cshtml";
}
<script src="~/Areas/Committee/AngularModel/angular-min-1.4.8.js"></script>
<script src="~/Areas/Committee/AngularModel/All_AllottedTendor.js"></script>

<div ng-app="AllottedModel" ng-controller="AllottedController">
    <div>
        <div>
            <h2 class="new_h2"> <strong>All Allotted Tenders</strong> </h2>
        </div>


        <div class="table-responsive">
           
            <table class="table new_table">

                <tr>

                    <th>
                        Tender ID
                    </th>
                    <th>
                        Title
                    </th>

                    <th>
                        Create By
                    </th>
                    <th>
                        Allotted To
                    </th>
                    <th>
                        Department Name
                    </th>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Tender Fee (&#8377;)
                    </th>
                    <th>
                        EMD Fee (&#8377;)
                    </th>
                    <th>
                        Active Date
                    </th>
                    <th>
                        Bid Start Date
                    </th>
                    <th>
                        Freeze Date
                    </th>
                    <th>
                        Download Start Date
                    </th>
                    <th>
                        Download End Date
                    </th>
                    <th>
                        Publish Date
                    </th>
                    <th>
                        Technical Bid Open Date
                    </th>
                    <th>
                        Financial Bid Open Date
                    </th>
                    <th>
                        Clarification Start Date
                    </th>
                    <th>
                        Clarification End Date
                    </th>
                </tr>

                <tr ng-repeat="item in TendorList">

                    <td>
                        {{item.TenderID}}
                    </td>
                    <td>
                        {{item.Title}}
                    </td>

                    <td>
                        {{item.UserName}}
                    </td>
                    <td>
                        {{item.CompanyName}}
                    </td>
                    <td>
                        {{item.DeptName}}
                    </td>
                    <td>
                        {{item.CateName}}
                    </td>
                    <td>
                        {{item.TenderFee}}
                    </td>
                    <td>
                        {{item.EMDFee}}
                    </td>
                    <td>
                        {{item.ActiveDate | date : 'dd-MMM-yyyy'}}
                    </td>
                    <td>
                        {{item.BidStartDate | date : 'dd-MMM-yyyy'}}
                    </td>
                    <td>
                        {{item.FreezeDate | date : 'dd-MMM-yyyy'}}
                    </td>
                    <td>
                        {{item.DownloadStartDate  | date : 'dd-MMM-yyyy'}}
                    </td>
                    <td>
                        {{item.DownloadEndDate | date : 'dd-MMM-yyyy'}}
                    </td>
                    <td>
                        {{item.PublishDate | date : 'dd-MMM-yyyy'}}
                    </td>
                    <td>
                        {{item.TechBidOpenDate | date : 'dd-MMM-yyyy'}}
                    </td>
                    <td>
                        {{item.FinancialBidOpenDate | date : 'dd-MMM-yyyy'}}
                    </td>
                    <td>
                        {{item.ClarificationStartDate | date : 'dd-MMM-yyyy'}}
                    </td>
                    <td>
                        {{item.ClarificationEndDate | date : 'dd-MMM-yyyy'}}
                    </td>

                </tr>
            </table>


        </div>

    </div>
</div>
