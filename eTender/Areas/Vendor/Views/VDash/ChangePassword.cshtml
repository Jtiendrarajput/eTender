@{
    ViewBag.Title = "ChangePasswordAction";
    Layout = "~/Areas/Vendor/Views/Shared/_layout.cshtml";
}
<style>
    .textcolortrue {
        color: red;
    }

    .textcolorfalse {
        color: white;
    }
</style>



<script src="~/Areas/Vendor/AnglarModel/angular-min-1.4.8.js"></script>
<script src="~/Areas/Vendor/AnglarModel/ChangePassword.js"></script>

<link href="~/Resources/css/style.css" rel="stylesheet" />

<div ng-app="ChangeModel" ng-controller="ChangePasswordController" style="overflow: auto !important;">

    <div class="table-responsive">
        <div>
            <h2 class="new_h2"><strong> Change Password </strong></h2>
        </div>
        <form ng-submit="ChangePassword()">
            <table class="table new_table">
                <tr>
                    <p>
                        <input type="password" placeholder="Old Password *" ng-model="changepassword.oldpassword" required />
                    </p>
                </tr>
                <tr>
                    <p>
                        <div ng-class="{textcolortrue: fpwdclass, textcolorfalse: !fpwdclass}">{{innerhtml}}</div>
                        <input type="password" id="pwd1" ng-focus="true" placeholder="New Password *" ng-model="changepassword.newpassword" ng-blur="PWDMATCH();" required />
                    </p>
                </tr>
                <tr>
                    <p>
                        <input ng-blur="CPMATCH()" id="pwd2" ng-focus="false" type="password" placeholder="Confirm Password 8" ng-model="changepassword.confirmPassword" required />
                    </p>
                </tr>
            </table>
            <input type="submit" value="Change Password" />
        </form>

    </div>
</div>